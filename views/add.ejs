<h1>Add</h1>

<section id="add" class="container">
    <div class="form-wrap">
      <h1>Add an Action Item</h1>
      <p>let your voice be heard!</p>
      <form>
        <div class="input-group">
          <label for="title">Call to Action</label>
          <input type="text" name="title" id="title" class="input-box" placeholder="eg. House Resolution 1123"
            maxlength="100" required>
        </div>
        <div class="input-group">
          <label for="technologies">Contact Name and Phone</label>
          <input type="text" name="technologies" id="technologies" class="input-box" placeholder="eg. Kevin McCarthy 555-555-5555"
          maxlength="100">
        </div>
        <div class="input-group">
          <label for="budget">Contact Name and Email</label>
          <input type="number" name="budget" id="budget" class="input-box" placeholder="eg. Kevin McCarthy Kevin@gov.us">
        </div>
        <div class="input-group">
          <label for="description">Description</label>
          <textarea name="description" id="description" class="input-box" placeholder="Describe the details of the call to Action"
            rows="10" required></textarea>
        </div>
        <!-- <div class="input-group">
          <label for="budget">Contact Email</label>
          <input type="email" name="contact_email" id="contactemail" class="input-box" placeholder="Enter an email"
            required>
        </div> -->
        <input type="submit" value="Add Gig" class="btn btn-reverse">
      </form>
    </div>
  </section>